	void doRace() {
		index = 0;
		while (index <= raceCars.length) {
			if (raceCars[index] != null) {
				raceCars[index].race();
				while (raceCars[index].location < distance) {
						raceCars[index].tijd ++ ;
				}
			}
			index++;
			Arrays.sort(raceCars.tijd);
			// index2=0;
